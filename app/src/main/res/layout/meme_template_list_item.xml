<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/templateItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/colorLightGrey"
    android:clickable="true"
    android:padding="8dp">


    <ImageView
        android:id="@+id/templateImage"
        android:layout_width="255dp"
        android:layout_height="210dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic[19]" />

    <TextView
        android:id="@+id/templateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/template_title"
        app:layout_constraintStart_toEndOf="@+id/templateImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/templateUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/username_hint"
        app:layout_constraintStart_toEndOf="@+id/templateImage"
        app:layout_constraintTop_toBottomOf="@+id/templateName" />


</android.support.constraint.ConstraintLayout>